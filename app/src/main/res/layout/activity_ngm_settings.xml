<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Intro copy -->
        <TextView
            android:text="@string/pick_big_size_toggle_with_qs_tile"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Permission status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_marginTop="12dp"
            android:text="@string/system_write_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnGrant"
            android:layout_marginTop="8dp"
            android:text="@string/grant_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Baseline (read-only) -->
        <TextView
            android:id="@+id/tvBaseline"
            android:layout_marginTop="16dp"
            android:text="@string/label_baseline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Big size input -->
        <TextView
            android:layout_marginTop="12dp"
            android:text="@string/label_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etBig"
            android:hint="@string/_1_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:autofillHints="none" />

        <Button
            android:id="@+id/btnSave"
            android:layout_marginTop="12dp"
            android:text="@string/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Divider -->
        <View
            android:layout_marginTop="16dp"
            android:background="#DDDDDD"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- Preview -->
        <TextView
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="@string/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/previewBig"
            android:layout_marginTop="8dp"
            android:text="@string/big_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Tip -->
        <TextView
            android:layout_marginTop="24dp"
            android:text="@string/tip_add_the_quick_settings_tile_pull_down_edit_tiles_drag_no_glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
